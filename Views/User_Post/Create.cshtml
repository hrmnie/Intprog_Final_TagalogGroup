@model AdventureSeekers.Models.User_Post

@{
    ViewData["Title"] = "Create";

    Layout = "~/Views/Shared/_Layout_Seeker.cshtml";

}

<h4>Post your Adventures</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="post_image" class="control-label">Add Image</label>
                <input name="post_image" type="file" asp-for="post_image" class="form-control" />
                <span asp-validation-for="post_image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="post_title" class="control-label">Travel Title</label>
                <input name="post_title" asp-for="post_title" class="form-control" />
                <span asp-validation-for="post_title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="post_caption" class="control-label">Caption</label>
                <input name="post_caption" asp-for="post_caption" class="form-control" />
                <span asp-validation-for="post_caption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="post_location" class="control-label">Location</label>
                <input name="post_location" asp-for="post_location" class="form-control" />
                <span asp-validation-for="post_location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="post_categories" class="control-label">Categories</label>
                <select name="post_categories" asp-for="post_categories" class="form-control">
                    <option value="Hiking">Hiking</option>
                    <option value="Bike Trails">Bike Trails</option>
                    <option value="Extreme Adventure">Extreme Adventure</option>
                    <option value="Gastro Delights">Gastro Delights</option>
                    <option value="Family Trips">Family Trips</option>
                </select>
                <span asp-validation-for="post_categories" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}