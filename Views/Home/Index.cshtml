@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<AdventureSeekers.Models.SeekerWithPost>
<div class="row gap-5 "style="padding-top:8rem">
<div class="pt-5 col-6" style="padding-top:20rem">
    <h1>Welcome to Adventure</h1>
    <h1>Seekers!</h1>
    <p>Embark on a journey of exciting and discovery</p>
</div>
<div class="col-5 ps-3">
    <img src="/img/1.jpg" class="h-75 w-100 " />
</div>
</div>
<hr />
<h4 class="mt-5">Recommended Travel Sights</h4>
<br />
<div id="carouselExampleIndicators" class="carousel slide mb-5" data-ride="carousel" style="max-width: 70%; margin: auto; ">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/upload/Microsoft.AspNetCore.Http.FormFile_beach.jpg" class="d-block w-100" alt="First slide" style="max-height: 400px;">
        </div>
        <div class="carousel-item">
            <img src="/upload/Microsoft.AspNetCore.Http.FormFile_temp.webp" class="d-block w-100" alt="Second slide" style="max-height: 400px;">
        </div>
        <div class="carousel-item">
            <img src="/img/2.jpg" class="d-block w-100" alt="Third slide" style="max-height: 400px;">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<hr />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h4>Recent Posts</h4>
            @foreach (var item in Model)
            {
                <div class="post row">
                    <div class="col-md-4">
                        <img src="@item.post.post_image" class="img-fluid" />
                    </div>
                    <div class="col-md-4">
                        <h5 class="post-title">@item.seeker.seeker_name </h5>
                        <p> @item.post.post_title</p>
                        <p>@item.post.post_caption</p>
                        <p class="post-location"><strong>Location: </strong>@item.post.post_location</p>
                        <p class="border bg-primary text-white bordered">@item.post.post_categories</p>
                    </div>
                    <div class="col-md-4">
                        <h5>Comments</h5>
                        <div class="comments">
                            @foreach (var comments in item.comment)
                            {
                                <div class="comment">
                                    <p><strong>@comments.comment_name:</strong> @comments.comment | @comments.comment_date</p>
                                </div>
                            }
                        </div>
                    
                    </div>
                </div>
            }
        </div>
    </div>
</div>
